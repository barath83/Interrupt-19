<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ScrollView
        android:id="@+id/scroll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/header"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/press_start_2p"
                android:text="INTERRUPT 2K'19"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textColor="#000000"
                android:textSize="25dp"
                android:textStyle="bold"></TextView>

            <TextView
                android:id="@+id/caption"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/header"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:text="25th September.Mark the Date"
                android:fontFamily="sans-serif-smallcaps"
                android:textColor="#000"
                android:textSize="20dp" />

            <LinearLayout
            android:id="@+id/layout"
            android:layout_below="@+id/caption"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="30dp">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.25">
                <TextView
                    android:id="@+id/days"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:fontFamily="sans-serif-smallcaps"
                    android:textColor="#000"
                    android:textSize="50dp"
                    android:gravity="center"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.25">
                <TextView
                    android:id="@+id/hours"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:fontFamily="sans-serif-smallcaps"
                    android:textColor="#000"
                    android:textSize="50dp"
                    android:gravity="center"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.25">
                <TextView
                    android:id="@+id/minutes"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:fontFamily="sans-serif-smallcaps"
                    android:textColor="#000"
                    android:textSize="50dp"
                    android:gravity="center"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.25">
                <TextView
                    android:id="@+id/seconds"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:fontFamily="sans-serif-smallcaps"
                    android:textColor="#000"
                    android:textSize="50dp"
                    android:gravity="center"/>
            </LinearLayout>
        </LinearLayout>

            <LinearLayout
                android:id="@+id/layoutone"
                android:layout_below="@+id/layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.25">
                    <TextView
                        android:id="@+id/daystext"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Days"
                        android:fontFamily="sans-serif-smallcaps"
                        android:textColor="#000"
                        android:textSize="15dp"
                        android:gravity="center"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.25">
                    <TextView
                        android:id="@+id/hourstext"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Hours"
                        android:fontFamily="sans-serif-smallcaps"
                        android:textColor="#000"
                        android:textSize="15dp"
                        android:gravity="center"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.25">
                    <TextView
                        android:id="@+id/minutestext"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Minutes"
                        android:fontFamily="sans-serif-smallcaps"
                        android:textColor="#000"
                        android:textSize="15dp"
                        android:gravity="center"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.25">
                    <TextView
                        android:id="@+id/secondstext"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Seconds"
                        android:fontFamily="sans-serif-smallcaps"
                        android:textColor="#000"
                        android:textSize="15dp"
                        android:gravity="center"/>
                </LinearLayout>
            </LinearLayout>

            <TextView
            android:id="@+id/whytitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/layoutone"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/source_code_pro_semibold"
            android:text="Why Choose Interrupt'19 ?"
            android:textColor="#000"
            android:textSize="25dp"
            android:textStyle="bold" />

            <TextView
                android:id="@+id/whycontent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/whytitle"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="15dp"
                android:fontFamily="@font/marvel"
                android:text="@string/why"
                android:textColor="#000"
                android:textSize="20dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/sympotitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/whycontent"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/source_code_pro_semibold"
                android:text="SVCE INTERRUPT 2019"
                android:textColor="#000"
                android:textSize="25dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/sympocontent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/sympotitle"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="15dp"
                android:fontFamily="@font/marvel"
                android:text="@string/sympo"
                android:textColor="#000"
                android:textSize="20dp"
                android:textStyle="bold" />

            <LinearLayout
                android:id="@+id/layouttwo"
                android:layout_below="@+id/sympocontent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:orientation="horizontal"
                android:layout_marginTop="30dp">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.25">
                    <ImageView
                        android:id="@+id/iconone"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:gravity="center"
                        android:src="@drawable/ic_chat"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.25">

                    <ImageView
                        android:id="@+id/icontwo"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:gravity="center"
                        android:src="@drawable/ic_chat" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.25">
                    <ImageView
                        android:id="@+id/iconthree"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:src="@drawable/ic_chat"
                        android:gravity="center"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.25">
                    <ImageView
                        android:id="@+id/iconfour"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:src="@drawable/ic_chat"
                        android:gravity="center"/>
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:id="@+id/members"
                android:layout_below="@id/layouttwo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:textColor="#000"
                android:text="Developers"
                android:textStyle="bold"
                android:fontFamily="sans-serif-smallcaps"
                android:textSize="25dp"
                android:layout_marginTop="15dp"/>

            <LinearLayout
                android:id="@+id/onepost"
                android:layout_marginTop="10dp"
                android:layout_below="@+id/members"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:id="@+id/image"
                android:src="@drawable/ic_chat"
                    android:layout_marginLeft="10dp"
                    ></ImageView>

              <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/nameone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Sujith Kumar"
                    android:textColor="#000"
                    android:textStyle="bold"
                    android:textSize="20dp"
                    android:gravity="center"
                    android:layout_margin="5dp"/>

                <TextView
                    android:id="@+id/postone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Executive Member"
                    android:textColor="#000"
                    android:gravity="center"
                    android:textSize="20dp"
                    android:layout_margin="5dp"/>

            </LinearLayout>

            </LinearLayout>


            <LinearLayout
                android:id="@+id/twopost"
                android:layout_below="@+id/onepost"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:id="@+id/imagetwo"
                    android:layout_marginLeft="10dp"
                    android:src="@drawable/ic_chat"
                    ></ImageView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/nametwo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Mathiazhagan"
                        android:textColor="#000"
                        android:textStyle="bold"
                        android:textSize="20dp"
                        android:gravity="center"
                        android:layout_margin="5dp"/>

                    <TextView
                        android:id="@+id/posttwo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="App Team"
                        android:textColor="#000"
                        android:textSize="20dp"
                        android:gravity="center"
                        android:layout_margin="5dp"/>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/threepost"
                android:layout_below="@+id/twopost"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:id="@+id/imagethree"
                    android:layout_marginLeft="10dp"
                    android:src="@drawable/ic_chat"
                    ></ImageView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/namethree"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Sivayazhini"
                        android:textColor="#000"
                        android:textStyle="bold"
                        android:textSize="20dp"
                        android:gravity="center"
                        android:layout_margin="5dp"/>

                    <TextView
                        android:id="@+id/postthree"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="App Team"
                        android:textColor="#000"
                        android:textSize="20dp"
                        android:gravity="center"
                        android:layout_margin="5dp"/>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/fourpost"
                android:layout_below="@+id/threepost"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:id="@+id/imagefour"
                    android:layout_marginLeft="10dp"
                    android:src="@drawable/ic_chat"
                    ></ImageView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/namefour"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Prasanna Kumar"
                        android:textColor="#000"
                        android:textStyle="bold"
                        android:textSize="20dp"
                        android:gravity="center"
                        android:layout_margin="5dp"/>

                    <TextView
                        android:id="@+id/postfour"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="App Team"
                        android:textColor="#000"
                        android:textSize="20dp"
                        android:gravity="center"
                        android:layout_margin="5dp"/>

                </LinearLayout>

            </LinearLayout>


            <LinearLayout
                android:id="@+id/fivepost"
                android:layout_below="@+id/fourpost"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:id="@+id/imagefive"
                    android:layout_marginLeft="10dp"
                    android:src="@drawable/ic_chat"
                    ></ImageView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/namefive"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Barath G"
                        android:textColor="#000"
                        android:textStyle="bold"
                        android:textSize="20dp"
                        android:gravity="center"
                        android:layout_margin="5dp"/>

                    <TextView
                        android:id="@+id/postfive"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Executive Member"
                        android:textColor="#000"
                        android:textSize="20dp"
                        android:gravity="center"
                        android:layout_margin="5dp"/>

                </LinearLayout>

            </LinearLayout>


            <TextView
                android:id="@+id/coreteam"
                android:layout_below="@+id/fivepost"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Core Team of ACE 2019"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:textSize="30dp"
                android:textStyle="bold"
                android:textColor="#000"
                />

            <LinearLayout
                android:id="@+id/layoutthree"
                android:layout_marginTop="10dp"
                android:layout_below="@+id/coreteam"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/Pimage"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_chat"
                    android:layout_width="100dp"
                    android:layout_height="100dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/Pname"
                    android:layout_below="@+id/Pimage"
                    android:layout_gravity="center"
                    android:layout_marginTop="5dp"
                    android:textColor="#000"
                    android:text="Sandhya"
                    android:textSize="20dp"
                    android:textStyle="bold"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/Ppost"
                    android:layout_below="@+id/Pname"
                    android:layout_gravity="center"
                    android:layout_marginTop="5dp"
                    android:textColor="#000"
                    android:text="President"
                    android:textSize="20dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/layoutfour"
                android:layout_below="@+id/layoutthree"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/VPimage"
                    android:src="@drawable/ic_chat"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_weight="1"/>

                <ImageView
                    android:id="@+id/VPimageONE"
                    android:src="@drawable/ic_chat"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_weight="1"/>


            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/layoutfive"
                android:layout_below="@+id/layoutfour"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="     Subiksha"
                    android:textStyle="bold"
                    android:textColor="#000"
                    android:textSize="20dp"
                    android:layout_marginTop="5dp"
                    android:gravity="center"
                    android:layout_weight="1"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="       Adithya Krish"
                    android:textStyle="bold"
                    android:textColor="#000"
                    android:textSize="20dp"
                    android:layout_marginTop="5dp"
                    android:gravity="center"
                    android:layout_weight="1"/>



            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/layoutsix"
                android:layout_below="@+id/layoutfive"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Vice-President"
                    android:textColor="#000"
                    android:textSize="20dp"
                    android:layout_marginTop="5dp"
                    android:gravity="center"
                    android:layout_weight="1"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Vice-President"
                    android:textColor="#000"
                    android:textSize="20dp"
                    android:layout_marginTop="5dp"
                    android:gravity="center"
                    android:layout_weight="1"/>



            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/layoutseven"
                android:layout_marginTop="10dp"
                android:layout_below="@+id/layoutsix"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/Simage"
                    android:src="@drawable/ic_chat"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_weight="1"/>

                <ImageView
                    android:id="@+id/TimageONE"
                    android:src="@drawable/pavitramodified"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_weight="1"/>

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/layouteight"
                android:layout_below="@+id/layoutseven"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="         Sarjhana"
                    android:textStyle="bold"
                    android:textColor="#000"
                    android:textSize="20dp"
                    android:layout_marginTop="5dp"
                    android:gravity="center"
                    android:layout_weight="1"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="        Pavitra Mohandos"
                    android:textStyle="bold"
                    android:textColor="#000"
                    android:textSize="20dp"
                    android:layout_marginTop="5dp"
                    android:gravity="center"
                    android:layout_weight="1"/>



            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/layoutnine"
                android:layout_below="@+id/layouteight"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Secretary"
                    android:textColor="#000"
                    android:textSize="20dp"
                    android:layout_marginTop="5dp"
                    android:gravity="center"
                    android:layout_weight="1"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Treasurer"
                    android:textColor="#000"
                    android:textSize="20dp"
                    android:layout_marginTop="5dp"
                    android:gravity="center"
                    android:layout_weight="1"/>



            </LinearLayout>



        </RelativeLayout>


    </ScrollView>



</RelativeLayout>